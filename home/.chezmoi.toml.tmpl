{{- $osid := .chezmoi.os -}}
{{- if hasKey .chezmoi.osRelease "id" -}}
{{-   $osid = printf "%s-%s" .chezmoi.os .chezmoi.osRelease.id -}}
{{- end -}}

{{- $onepassword_mode := "service" -}}
{{- if eq .chezmoi.os "darwin" -}}
{{-   $onepassword_mode = "account" -}}
{{- end -}}

[data]
    osid = {{ $osid | quote }}

[git]
  autoCommit = false

[diff]
  command = "difft"
  args = ["{{ .Destination }}", "{{ .Target }}"]

[onepassword]
  mode = {{ $onepassword_mode | quote }}
